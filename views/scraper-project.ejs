        $('#sc-scrape-tab-project').removeClass('btn-default').addClass('btn-info');
        $('#sc-scrape-results').addClass('hidden');
        $('#sc-scrape-project').removeClass('hidden');
        matchEditor.refresh();
        scriptEditor.refresh();
        templateEditor.refresh();
        cssEditor.refresh();
      }
