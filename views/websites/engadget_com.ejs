<%
if (urlMatch('engadget.com')) {

  setScriptFile('engadget_com.ejs');

  removeSelector('#gdgt-wrapper');
  removeSelector('#comments');
  removeSelector('.engadget-callout-module');

  removeSelector('.permalink-social-tools');
  removeSelector('.rail-collection-main');

  removeSelector('.newsletter');
  removeSelector('.read-more');

  $('header').removeClass('container');
  
  removeInlineScripts('#body');
  normalizeLinks('#body');

  addCss('' +
  '.h1 {' +
    'margin-top: 0;' +
    'font-size: 30px;' +
  '}' +
  '.h2 {' +
    'margin-top: 0;' +
    'font-size: 26px;' +
  '}' +
  '.feature-title {' +
    'font-size: 18px;' +
  '}' +
  '.meta-gallery ul {' +
    'list-style: none;' +
  '}' +
  'ul.thumbs {' +
    'list-style: none;' +
  '}'
  );

  setHtml($('#body').html());
}
%>