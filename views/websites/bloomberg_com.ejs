<%
if (urlMatch('bloomberg.com')) {

  setScriptFile('bloomberg_com.ejs');

  removeSelector('.social-share');

  removeInlineScripts('main#content');
  normalizeLinks('main#content');

  addCss('' +
  '.byline {' +
    'color: #767676;' +
    'font-size: 1.5rem;' +
    'line-height: 2.125rem;' +
  '}' +
  '.article-details .byline {' +
    'display: block;' +
    'padding: 1rem 0;' +
  '}'
  );
  addCss('' +
  '.article .inline-media__info {' +
    'position: relative;' +
    'background-color: #fff;' +
    'padding: 1.25rem;' +
    'z-index: 1;' +
    'padding: 0.9375rem 0;' +
    'line-height: 2.125rem;' +
  '}' +
  '.author-link:last-of-type:before {' +
    'color: #767676;' +
    'content: " and ";' +
  '}'
  );
  addCss('' +
  '.topic-list {' +
    'display: table;' +
    'font-size: 1.5rem;' +
    'line-height: 2.5rem;' +
  '}' +
  '.topic-list__topics {' +
    'display: table-cell;' +
    'vertical-align: top;' +
    'width: 100%;' +
    'list-style: none;' +
    'padding: 0;' +
    'display: block;' +
  '}' +
  '.topic-list__topic {' +
    'display: inline;' +
  '}' +
  '.topic-list__topic-link {' +
    'font-size: 1.5rem;' +
    'line-height: 2.5rem;' +
  '}' +
  '.topic-list:before {' +
    'color: #fff;' +
    'background-color: #2B00F7;' +
    'content: "Read More";' +
    'display: inline-block;' +
    'overflow: hidden;' +
    'font-size: 1.75rem;' +
    'white-space: nowrap;' +
    'height: 2.25rem;' +
    'margin-right: 0.625rem;' +
    'padding: 0 0.625rem;' +
  '}' +
  '.topic-list__topic:after {' +
    'content: ", ";' +
  '}'
  );

  setHtml($('main#content').html());
}
%>