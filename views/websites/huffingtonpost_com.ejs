<%
if (urlMatch('huffingtonpost.com')) {

  setScriptFile('huffingtonpost_com.ejs');

  removeSelector('.author.original');

  removeSelector('.wire-linkout-byline-component__logo');
  removeSelector('.follow-us-below-entry-component');
  removeSelector('.huffpost-recirc');
  removeSelector('.huffpost-adspot');
  removeSelector('.comments-component');
  removeSelector('.image-component__pinterest');

  //removeSelector('.fout_guard');
  removeSelector('.hp-slideshow-wrapper');
  removeSelector('.entry-component__floating-share');

  removeSelector('.author-component__headshot');
  removeSelector('.author-component__social-links');

  removeSelector('section.rail');
  removeSelector('#conversations-huffpost-web');
  removeSelector('.contribute');
  removeSelector('#social_badges');
  removeSelector('.print_btn.print_common');
  removeSelector('.social');

  removeSelector('section.also-on');
  removeSelector('section.around-the-web');

  removeSelector('.ad_spot');

  addCss('' +
  '.image-component__overlay {' +
    'display: block;' +
  '}' +
  'h2.entry-component__excerpt {' +
    'margin-top: 0;' +
    'font-size: 18px;' +
    'font-weight: bold;' +
  '}'
  );

  if ($('#news_content').length) {

    removeInlineScripts('#news_content');
    normalizeLinks('#news_content');

    setHtml($('#news_content').html());
  } else if ($('section.main').length) {

    removeInlineScripts('section.main');
    normalizeLinks('section.main');

    setHtml($('section.main').html());
  } else {

    removeInlineScripts('div.content');
    normalizeLinks('div.content');

    setHtml($('div.content').html());
  }

}
%>